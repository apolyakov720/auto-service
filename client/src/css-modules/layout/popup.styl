.popup
  font-size $font-size-base
  position absolute
  z-index $z-index-popup
  width 100%
  max-width 450px
  background-color white
  border-radius $border-radius
  border $border-width solid $color-border.dark;
  overflow hidden

  &__title
    font-family $font-family-bold
    padding .5em
    text-align center

  &__content
    padding .5em

  &__line-controls
    display flex
    border-top $border-width solid $color-border.dark;