.layout
  font-size $font-size-base
  display flex
  flex-flow column nowrap
  height 100%
  max-width $layout-breakpoint-0
  margin 0 auto

  &__main
    display flex
    flex 1
    flex-wrap nowrap

  &__panel
    order 0
    margin-right 1em
    flex 1 0 0

    &--right
      margin-right 0
      margin-left 1em
      order 2

  &__content
    flex 4 0
    order 1