.layout
  font-size $font-size-base
  display flex
  flex-flow column nowrap
  height 100%
  max-width $layout-breakpoint-0
  margin 0 auto

  &__header
    order 0

  &__main
    display flex
    flex 1
    flex-wrap nowrap
    order 1

  &__footer
    order 2

  &__panel
    flex 1 0 0
    padding .5em 0

    &--primary
      margin-right .5em
      order 0

    &--secondary
      margin-left .5em
      order 2

  &__content
    flex 4 0
    order 1

  &__module
    padding .5em