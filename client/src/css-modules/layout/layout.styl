.layout
  font-size $font-size-base
  display flex
  flex-flow column nowrap
  height 100%
  max-width $layout-breakpoint-0
  margin 0 auto

  &__main
    display flex
    flex 1
    flex-wrap nowrap

  &__panel
    order 0
    flex 1 0 0
    padding .5em 0
    margin-right .5em

    &--right
      margin-right 0
      margin-left .5em
      order 2

  &__content
    flex 4 0
    order 1

  &__outlet
    padding .5em