.overlay
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  overflow auto
  z-index $z-index-overlay
  background-color rgba($color-element.shadow-dark, .5);
  padding 1rem

  &__container
    border-radius .5rem
    position relative
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center

  &--transparent
    background-color transparent