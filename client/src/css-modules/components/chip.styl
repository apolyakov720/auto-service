.chip
  font-size $font-size-base
  font-family $font-family-light
  display inline-flex
  align-items center
  background-color $color-background.light;
  padding .25em
  padding-right 0
  border-radius 1em
  border $border-width solid $color-border.default;

  &__label
    padding-right .25em

  &__close
    display flex
    align-items center
    justify-content center

  &--textual
    padding 0 0 0 .25em
    border-radius .2em

  theme-variant(variant-background-border-transparent)