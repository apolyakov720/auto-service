.alert
  font-size $font-size-base
  border-radius $border-radius
  padding .5em 1em
  display flex
  color $color-text.default;
  background-color lighten(@color, 90%)
  border $border-width solid @background-color

  &__icon
    padding-top .15em
    margin-right .5em

  &__section
    display flex
    flex-direction column

  &__title
    font-family $font-family-bold

  &__content
    padding .35em 0
    font-size .75em

  &__action
    padding-top .15em
    margin-left auto

  theme-variant(variant-alert)

  &--outlined
    background-color $color-background.light;
    border-color currentColor