.radio
  font-size 2rem
  display inline-flex
  align-items center

  &__input
    display inline-block
    height 1.5em
    width @height
    border-radius 50%
    position relative
    flex-shrink 0
    color $colors.white;
    border .09em solid $colors.gray200;
    background-color $colors.white;

    ^[0] input:checked + &
      border-color $colors.blue;
      background-color $colors.blue;

    &:before
    &::before
      content ''
      position absolute
      width (@width / 2.1)
      height @width
      top 50%
      left 50%
      transform translate(-50%, -50%)
      background-color currentColor
      border-radius inherit

  &__caption
    margin-left .25em