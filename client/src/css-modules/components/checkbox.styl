.checkbox
  font-size 2rem
  display inline-flex
  align-items center

  &__input
    display inline-flex
    width 1.5em
    height @width
    color $color-text.light;
    border $border-width solid $color-border.default;
    background-color $color-background.light;
    border-radius $border-radius
    justify-content center

    ^[0] input:checked + &
      border-color $color-theme.primary;
      background-color $color-theme.primary;

  &__caption
    margin-left .4em
    user-select none