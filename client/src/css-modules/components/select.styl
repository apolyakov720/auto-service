.select
  font-size $font-size-base
  display inline-block
  position relative
  width 20em

  &__placeholder
    padding .5em 0

  &__sample-item
    margin-right .25em
    display inline-block

    &:last-child
      margin-right 0

  &__dropdown
    position absolute
    left 0
    top 100%
    width 100%
    border $border-width solid $color-theme.primary;
    border-radius 0 0 $border-radius $border-radius
    overflow hidden

  &__list-item
    padding .25em