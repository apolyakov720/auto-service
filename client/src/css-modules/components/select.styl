.select
  font-size $font-size-base
  position relative
  // max-width $max-width-form-element

  &__sample-sheet
    display flex
    height $input-line-height * $font-size-base

  // TODO исправить верстку, когда текст выходит за пределы
  &__placeholder
    color $color-element.placeholder;
    font-family $font-family-light

  &__sample-item
    margin-right .25em
    display inline-block

    &--collapse
      margin-left auto

    &:last-child
      margin-right 0

  &__list-item
    display flex
    align-items center
    padding .25em
    margin-bottom .25em
    border-radius $border-radius

    &--selected
      color $color-theme.primary;

    &--highlighted
      background linear-gradient(90deg, $color-theme.warning, transparent 90%)

    &:last-child
      margin-bottom 0

    > *
      &:last-child
        margin-left auto