.button
  font-size 2rem
  display inline-flex
  justify-content center
  align-items center
  border $border-width solid $colors.gray200;
  border-radius $border-radius
  outline none
  padding .25em
  color $colors.black;
  background-color $colors.white;
  user-select none

  &__caption
    margin .25em

  &__extra
    display inline-flex
    justify-content center
    align-items center

  &--circled
    border-radius 1em

  &--no-stroke
    border-color @background-color