.button
  font-size 2rem
  display inline-flex
  justify-content center
  align-items center
  color $colors.white;
  background $theme.primary;
  border none
  border-radius $border-radius
  padding .35em .8em
  outline none
  user-select none
  vertical-align middle
  min-width 4em
  min-height 2em
  max-width 100%

  &__extra
    margin-right .5em
    display inline-flex
    justify-content center
    align-items center