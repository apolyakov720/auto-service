.button
  font-size $font-size-base
  display inline-flex
  justify-content center
  align-items center
  color white
  background #138efc
  border .075em solid #0080f4
  border-radius .35em
  padding .35em .8em
  outline none
  cursor pointer
  user-select none
  vertical-align middle
  box-shadow 0 .065em .1em rgba(0, 0, 0, .4)
  min-width 4em
  min-height 2em
  max-width 100%

  &__state
    margin-right .5em
    display inline-flex
    justify-content center
    align-items center