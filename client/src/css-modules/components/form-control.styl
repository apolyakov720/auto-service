.form-control
  font-size 2rem
  color $color-palette.gray200;
  border-width $border-width
  border-color @color
  border-style solid
  background-color $color-background.light;
  border-radius $border-radius
  display flex
  align-items stretch
  width 100%
  max-width 53.2em
  overflow hidden

  &__extra
  &__effect
  &__component
    display inline-flex
    align-items center
    justify-content center

  &__extra
    background-color $color-background.default;
    padding .5em
    border-right-width @border-width
    border-right-style @border-style
    border-color currentColor

  &__effect
    margin-left .5em

  &__component
    width 100%
    padding .35em .5em

  &--primary
    color $color-theme.primary;
    border-color @color