$origin-scroll-bar-size = 24px
$custom-scroll-bar-size = 5px

.scroll-box
  width 100%
  max-width 100%
  overflow hidden
  position relative
  background $color-background.light;
  max-height 250px
  display flex

  &__content
    overflow-x hidden
    overflow-y auto
    padding-right ($origin-scroll-bar-size / 2 + $custom-scroll-bar-size)
    margin-right -($origin-scroll-bar-size + $custom-scroll-bar-size)
    flex 1

  &__vertical-bar
    position relative
    width $custom-scroll-bar-size
    background $color-border.default;
    border-radius 5px

    &--hide
      background transparent

    .marker
      position absolute
      top 0
      left 0
      width 100%
      height 25px
      background $color-element.label;
      transition top .1s, box-shadow .1s
      border-radius inherit

      &:active
        background $color-background.dark
        box-shadow 0 0 1px 1px $color-element.shadow-dark