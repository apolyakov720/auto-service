.badge
  font-size 2rem
  font-weight bold
  display inline-block
  color $color-theme.primary;
  background-color lighten(@color, 90%);
  padding .5em 1em
  border-radius 1em
  text-transform uppercase

  &--squared
    border-radius $border-radius

  &--circled
    display inline-flex
    border-radius 50%
    justify-content center
    align-items center
    min-width 1.4em
    padding .2em

    &::before
      content ''
      float left
      width auto
      padding-bottom 100%

  theme-variant(variant-badge, ("primary"))