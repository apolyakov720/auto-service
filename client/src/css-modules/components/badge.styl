.badge 
	display inline-block
	color #4952b8
	background-color lighten(@color, 70%)
	border-radius 10px
	text-transform uppercase
	padding 5px 10px
	font-weight bold
	
	&--cancelled
		color #ed5556
		background-color lighten(@color, 70%)

	&--completed
		color #00bf79
		background-color lighten(@color, 70%)

