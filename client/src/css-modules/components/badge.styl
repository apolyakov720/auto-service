.badge
  font-size 2rem
  display inline-block
  color $colors.jade;
  background-color lighten(@color, 90%)
  border-radius 1em
  text-transform uppercase
  padding .5em 1em
  font-weight bold

  &--secondary
    color $colors.violet;
    background-color lighten(@color, 90%)

  &--warning
    color $colors.orange;
    background-color lighten(@color, 90%)

  &--error
    color $colors.coral;
    background-color lighten(@color, 90%)

  &--squared
    border-radius .3em
    
  &--circled
    display inline-flex
    border-radius 50%
    justify-content center
    align-items center
    min-width 1.4em
    padding .2em

    &::before
      content ''
      float left
      width auto
      padding-bottom 100%