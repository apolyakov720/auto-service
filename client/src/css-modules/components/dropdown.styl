.dropdown
  position absolute
  left 0
  top 110%
  display flex
  flex-direction column
  min-width 100%
  border $border-width solid $color-border.default;
  border-radius $border-radius
  overflow hidden
  z-index $z-index-dropdown
  background-color $color-background.light;

  &__header
    padding .25em
    order 0

  &__menu
    padding .25em
    order 1

  &__controls
    border-top $border-width solid $color-border.default;
    padding .25em
    order 2

  theme-variant(variant-border)