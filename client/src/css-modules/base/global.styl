:root
  font-family $font-family-regular, $font-family-safe
  font-size $font-size-root
  box-sizing border-box
  color $colors.black;
  height 100%
  width 100%

*
*::after
*::before
  box-sizing inherit

*
  padding 0
  margin 0

img
  max-width 100%
  height auto

ul
ol
  list-style-type none

body
#container
  height 100%
  width 100%

.application
  width 100%
  height 100%
  max-height 100%
  max-width $max-width-application
  margin 0 auto
  padding 50px