:root
  font-family $font-family-regular
  font-size $font-size-root
  box-sizing border-box
  color $color-text.dark;
  height 100%
  width 100%
  cursor default

*
*::after
*::before
  box-sizing inherit

*
  padding 0
  margin 0

img
  max-width 100%
  height auto

ul
ol
  list-style-type none

body
#container
  height 100%
  width 100%

.application
  width 100%
  height 100%
  max-height 100%
  max-width $max-width-application
  margin 0 auto
  padding 1rem

// TODO вынести в classes
.text-center
  text-align center

.text-right
  text-align right

.subheader
  font-family $font-family-light
  color $color-element.subheader;
  font-size .75em

.a
  color $color-theme.primary;
  font-family $font-family-regular
  text-decoration none