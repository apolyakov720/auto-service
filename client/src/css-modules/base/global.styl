:root
  font-family "Fira Code Regular", Tahoma, sans-serif
  font-size 10px
  line-height 1 // <- Потом нужно будет проверить
  box-sizing border-box
  color #333
  height 100%
  width 100%

*
*::after
*::before
  box-sizing inherit

*
  padding 0
  margin 0

img
  max-width 100%
  height auto

ul
ol
  list-style-type none

body
#container
  height 100%
  width 100%

.application
  width 100%
  height 100%
  max-height 100%
  max-width $max-width-application
  margin 0 auto

  // background #eee
  padding 50px

.input-no-visible
  &:not(:checked)
  &:checked
    position absolute
    opacity 0
    pointer-events none