$font-size-base = 5rem
$max-width-application = 1200px
$spare-font = Tahoma, sans-serif

// Размерность:
// s - small (маленький)
// m - medium small (средний - по умолчанию, создавать отдельный мофикатор не нужно)
// l - large (большой)
// xl - extra large (очень большой)
// xxl - extra extra large (очень очень большой)

// Theme (тема элемента)
// primary - основная (по умолчанию, создавать отдельный мофикатор не нужно)
// secondary - вторичная
// warning - предупреждение
// error - ошибка
// disable - отключенный

$colors = {
  violet: #4952b8,
  coral: #ed5556,
  jade: #00bf79,
  orange: #fcc419,
  blue: #4c6ef5,
  white: #ffffff,
  black: #000000,
  gray100: #f5f7fa,
  gray200: #cfdae6,
  gray300: #bfccd9,
  gray400: #adbdcc,
  gray500: #8595a6,
}